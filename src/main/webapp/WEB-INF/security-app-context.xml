<?xml version="1.0" encoding="utf-8"?>
<beans:beans xmlns="http://www.springframework.org/schema/security"
    xmlns:beans="http://www.springframework.org/schema/beans"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.springframework.org/schema/beans 
                    http://www.springframework.org/schema/beans/spring-beans-3.1.xsd
                    http://www.springframework.org/schema/security 
                    http://www.springframework.org/schema/security/spring-security-3.1.xsd">

    <global-method-security pre-post-annotations="enabled"/>
    
    <http auto-config="true" use-expressions="true">
        <intercept-url pattern="/images/**" access="permitAll" />
        <intercept-url pattern="/images/upload/**" access="hasRole('ROLE_ADMIN')" />
        <intercept-url pattern="/images/list/**" access="permitAll" />
        <intercept-url pattern="/images/download/**" access="permitAll" />
        <intercept-url pattern="/resources/**" access="permitAll" />
        <logout logout-success-url="/" />
    </http>

    <authentication-manager>
        <authentication-provider>
            <user-service>
                <user name="lnramirez" password="orochi" authorities="ROLE_ADMIN" />
            </user-service>
        </authentication-provider>
    </authentication-manager>
</beans:beans>   